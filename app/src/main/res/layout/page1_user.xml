<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="#24879A"
        android:id="@+id/rl1"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:id="@+id/menu"
            android:src="@drawable/list_view"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/rl1"
        android:id="@+id/rl2"
        android:background="@drawable/backpage1info">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sun"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>


        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/textTime"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:layout_marginRight="30dp"
            android:layout_above="@+id/c"
            android:format24Hour="HH:mm"
            android:format12Hour="HH:mm"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="96/7/10"
            android:gravity="center"
            android:id="@+id/textDate"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/c"
            android:layout_alignParentRight="true" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_marginRight="20dp"
            android:id="@+id/c"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backname"
        android:text="امیر حاتمی"
        android:gravity="center"
        android:id="@+id/textName"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl1"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl2"
        android:id="@+id/rl3"
        android:background="#ffffff">

        <!-- Login progress -->
        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="20dp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/startbtn"
            android:id="@+id/imageStartWork"
            android:padding="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="30sp"
            android:gravity="center"
            android:text="شروع کار"
            android:textStyle="bold"
            android:id="@+id/textwork"/>

    </RelativeLayout>


</RelativeLayout>