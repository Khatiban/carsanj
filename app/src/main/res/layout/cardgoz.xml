<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imagecard"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:background="@drawable/gozback">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:text="نام : احسان"
            android:textSize="15sp"
            android:id="@+id/usertext"
            android:padding="8dp"
            android:gravity="right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:text="موضوع : حسابداری"
            android:textSize="15sp"
            android:id="@+id/usertext2"
            android:padding="8dp"
            android:gravity="right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:text="شرکت : برنا"
            android:textSize="15sp"
            android:id="@+id/usertext3"
            android:padding="8dp"
            android:gravity="right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:text="زمان کار : "
            android:textSize="15sp"
            android:id="@+id/usertext4"
            android:padding="8dp"
            android:gravity="right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:text="توضیحات : و......................."
            android:textSize="15sp"
            android:id="@+id/usertext6"
            android:padding="8dp"
            android:gravity="right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:text="1396/10/1  21:30"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:id="@+id/userdate"
            android:layout_marginTop="5dp"
            android:gravity="left"/>

    </LinearLayout>

</RelativeLayout>