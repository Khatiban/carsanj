<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="#24879A"
        android:id="@+id/rl1"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="14dp"
            android:id="@+id/back"
            android:src="@drawable/nav_arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text"
            android:text="مرخصی ساعتی جدید"
            android:textSize="20sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:id="@+id/ll1"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="25dp">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:hint="بیمه خودرو"
            android:textColorHint="@color/text2"
            android:textColor="@color/text"
            android:textDirection="rtl"
            android:id="@+id/new_moz"
            android:background="@drawable/et_password_bg2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_gravity="right"
            android:text="موضوع :"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/ll1"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:id="@+id/ll2"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="25dp">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:hint="2"
            android:gravity="center"
            android:textColorHint="@color/text2"
            android:textColor="@color/text"
            android:inputType="number"
            android:id="@+id/new_time"
            android:background="@drawable/et_password_bg2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_gravity="right"
            android:text="مدت مرخصی :(ساعت)"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/ll2"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll2"
        android:id="@+id/ll3"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="25dp">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:padding="15dp"
            android:gravity="top"
            android:maxLength="120"
            android:hint="سلام ، بابت تمدید بیمه خودرو 2 ساعت مرخصی می خواهم باتشکر"
            android:textColorHint="@color/text2"
            android:textColor="@color/text"
            android:textDirection="rtl"
            android:id="@+id/new_toz"
            android:background="@drawable/et_password_bg2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_gravity="right"
            android:text="توضیحات :"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/ll3"
        android:orientation="horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/et_password_bg3"
        android:text="ارسال"
        android:textColor="@color/text"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingRight="35dp"
        android:layout_below="@+id/ll3"
        android:layout_margin="20dp"
        android:id="@+id/new_send"
        android:paddingLeft="35dp"/>

</RelativeLayout>