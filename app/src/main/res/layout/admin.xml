<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#494949"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/backname"
        android:gravity="center"
        android:text="شما ادمین هستید"
        android:textColor="#494949" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mhm"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:text="مدیریت درخواست های مرخصی ساعتی"
                android:textColor="@color/text"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/mhm"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/text"
                android:orientation="horizontal" />


            <TextView
                android:id="@+id/mdm"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/mhm"
                android:gravity="center"
                android:text="مدیریت درخواست های مرخصی روزانه"
                android:textColor="@color/text"
                android:textSize="22sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/mdm"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/text"
                android:orientation="horizontal" />


            <TextView
                android:id="@+id/goz"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/mdm"
                android:gravity="center"
                android:text="گزارش کار ها"
                android:textColor="@color/text"
                android:textSize="22sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/goz"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/text"
                android:orientation="horizontal" />


            <TextView
                android:id="@+id/goz2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/goz"
                android:gravity="center"
                android:text="ساعات کاری کاربران"
                android:textColor="@color/text"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/goz2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/text"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/mes"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/goz2"
                android:gravity="center"
                android:text="پیام ها"
                android:textColor="@color/text"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/mes"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/text"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/set"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/mes"
                android:gravity="center"
                android:text="تنظیمات"
                android:textColor="@color/text"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/set"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/text"
                android:orientation="horizontal" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>