<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="#24879A"
        android:id="@+id/rl1"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="14dp"
            android:id="@+id/back"
            android:src="@drawable/nav_arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text"
            android:text="مرخصی روزانه جدید"
            android:textSize="20sp"/>

    </RelativeLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll1"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_gravity="right"
            android:text="موضوع :"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:hint="مسافرت (11/11)"
            android:textColorHint="@color/text2"
            android:textColor="@color/text"
            android:textDirection="rtl"
            android:id="@+id/new_moz"
            android:background="@drawable/et_password_bg2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/ll1"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:id="@+id/ll2"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_gravity="right"
            android:text="تاریخ مرخصی : "/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:hint="تعداد روز مرخصی"
            android:gravity="center"
            android:textColorHint="@color/text2"
            android:textColor="@color/text"
            android:inputType="number"
            android:id="@+id/new_time"
            android:background="@drawable/et_password_bg2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll2"
        android:id="@+id/ll4"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:hint="از تاریخ"
            android:gravity="center"
            android:textColorHint="@color/text2"
            android:textColor="@color/text"
            android:layout_margin="2dp"
            android:id="@+id/new_time3"
            android:background="@drawable/et_password_bg2"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:hint="تا تاریخ"
            android:gravity="center"
            android:textColorHint="@color/text2"
            android:textColor="@color/text"
            android:layout_margin="2dp"
            android:id="@+id/new_time2"
            android:background="@drawable/et_password_bg2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/ll4"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll4"
        android:id="@+id/ll3"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_gravity="right"
            android:text="توضیحات :"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:padding="15dp"
            android:gravity="top"
            android:maxLength="120"
            android:hint="سلام ، درخواست مرخصی برای مسافرت به شمال دارم"
            android:textColorHint="@color/text2"
            android:textColor="@color/text"
            android:textDirection="rtl"
            android:id="@+id/new_toz"
            android:background="@drawable/et_password_bg2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/ll3"
        android:orientation="horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/et_password_bg3"
        android:text="ارسال"
        android:textColor="@color/text"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingRight="35dp"
        android:layout_below="@+id/ll3"
        android:layout_margin="20dp"
        android:id="@+id/new_send"
        android:paddingLeft="35dp"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>